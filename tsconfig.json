{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "typings"],
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true
  },
  "include": ["./src/*.ts", "./test/*.ts"]
}
